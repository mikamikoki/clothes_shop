<div class="row">
  <div class="col-lg-9 col-md-12">
    <div class="card-deck">
        <h2><%= "#{@index}一覧 （全#{@products_all.count}件）" %></h2>

      <div class="jscroll-tmp">
        <% @products.each do |product| %>
          <div class="card" style="margin-bottom: 50px">
            <div class="card-slider slider" >
              <% product.product_images.each do |product_image| %>
                <%= attachment_image_tag product_image, :image, class:"img-fluid"; %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-title">
                <%= link_to(product_path(product), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= product.name %></span></strong>
                <% end %>
              </p>
              <p class="card-text">Price：<%= product.price %></p>
            </div>
        </div>
        <% end %>
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>

<script>
$(function() {
  var jscrollOption = {
      loadingHtml: '読み込み中・・・',
      autoTrigger: true,
      padding: 80,
      nextSelector: '.pagination > span.next > a',
      contentSelector: '.jscroll-tmp'
  };
  $('.jscroll-tmp').jscroll(jscrollOption);
});
</script>