<% provide(:title, "マイページ") %>
<div class="customers_back">
<div class="row">
	<div class="col-sm-12">
		<h2 class="head-line text-center">マイページ</h2>
		<p><strong class="information-link"><i class="far fa-user"></i>登録情報</strong>
		<% if notice%>
	<div class="flash notice">
	  <span id="notice"><%= notice %></span>
	</div>
<% elsif flash[:success] %>
	<div class="flash success">
  	<span id="success"><%= flash[:success] %></span>
	</div>
<% elsif flash[:alert] %>
	<div class="flash danger">
	  <span id="alert"><%= flash[:alert] %></span>
	</div>
<% end %>
			<%= link_to " 編集する", customer_edit_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
			<%#= link_to " パスワードを変更する", edit_customer_registration_path, class: "glyphicon glyphicon-pencil btn btn-warning" %>
		</p>
            <div class="table-responsive-sm">
			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td nowrap>氏名</td>
						<td class="text-left"><%= @customer.last_name %><%= @customer.first_name %></td>
					</tr>
					<tr>
						<td nowrap>カナ</td>
						<td class="text-left"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
					</tr>
					<tr>
						<td nowrap>郵便番号</td>
						<td class="text-left"><%= @customer.post_code %></td>
					</tr>
					<tr>
						<td nowrap>住所</td>
						<td class="text-left"><%= @customer.address %></td>
					</tr>
					<tr>
						<td nowrap>電話番号</td>
						<td class="text-left"><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<td nowrap>メールアドレス</td>
						<td class="text-left"><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>
			</div>

			<!--<div class="mypage-bottoms">-->
			<!--	<P><strong class="shipping-link">配送先</strong>-->
			<!--		<#%= link_to " 一覧を見る", customers_addresses_path, data: {"turbolinks" => false}, class: "glyphicon glyphicon-folder-open btn btn-info" %>-->
			<!--	</p>-->
				<p><strong class="order-link">注文履歴</strong>
					<%= link_to " 一覧を見る", customers_orders_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
				</p>
			</div>
	</div>
</div>