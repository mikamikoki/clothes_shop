<div class="sing_in_back">
  <div class="container">
    <br>
    <br>
    <br>
    <br>
    <br>

    <h2 class="head-line title_h2 text-center">会員一覧</h2>
    <div class="row">
  <!--<div class="col-xs-10 col-xs-offset-1">-->
      <div class="table-responsive-sm">
        <table class="table table-inverse">
          <thead>
            <tr class="info">
              <th nowrap>会員ID</th>
              <th nowrap>氏名</th>
              <th nowrap>メールアドレス</th>
              <th nowrap>ステータス</th>
            </tr>
          </thead>

          <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1">
              <%= customer.id %>
            </td>
            <td nowrap class="text-left">
              <%= link_to admin_customer_path(customer), class: "btn-link"  do %>
                <i class="far fa-user"></i>
                <%= customer.last_name %> <%= customer.first_name %>
              <% end %>
            </td>
            <td class="text-left">
              <%= customer.email %>
            </td>
            <td class="col-xs-2">
              <% if customer.withdrawal_status == true%>
                <p><i class="fas fa-bullseye blue"></i>退会</p>
              <% else %>
                <p><i class="fas fa-bullseye red"></i>有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
        </table>
    </div>
  </div>
    <div class= "text-center"><%= paginate(@customers) %></div>
  </div>
<br>
<br>
<br>
<br>
<br>
</div>