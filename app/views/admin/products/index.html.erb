<div class="sing_in_back">
<div class="container">
  <div class="row">
    <div class='col-lg-2' style="margin-top: 50px">
			<h5>商品一覧</h5>
			<div class="success"><%= flash[:success] %></div>
		</div>
		<div class='col-lg-8'></div>
		<div class='col-lg-2'>
			<h2>
				<%=link_to("products/new") do %>
	    		<button class="btn-circle-flat btn-lg fas fa-plus"></button>
				<%end%>
			</h2>
		</div>
	</div>
</div>
<div class="table-responsive-sm">
	<table class="table table-inverse">
	<thead>
		<tr bgcolor=" #edc5c0">
			<th nowrap>商品ID</th>
			<th nowrap>商品名</th>
			<th nowrap>税抜価格</th>
			<th nowrap>ジャンル</th>
			<th nowrap>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
			<tr>
				<th><%= product.id %></th>
				<th nowrap><%= link_to product.name, admin_product_path(product) %></th>
				<th>￥<%= (product.price).to_s(:delimited) %></th>
				<th nowrap><%= product.genre.name %></th>
				<th><% if product.sales_status == true %>
						販売中
					<% else %>
						販売停止中
					<% end %>
				</th>
			</tr>
		<% end %>
	</tbody>
</table>
<%= paginate @products %>
</div>
<br>
<br>
<br>
<br>
<br>
</div>