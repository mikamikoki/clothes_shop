  <div class='col-lg-2'>
    <h5>商品新規登録</h5>
  </div>

        <div class ="danger"><%= flash[:danger] %></div>

    <%= form_with(model: @product, url: admin_products_path, method: :post, local: true) do |f| %>

        <div class="col-sm-10">
        	<div class="form-group col-sm-9">
        	  <%= f.label :image %>
              <%= f.attachment_field :product_images_images , multiple: true %>
        	</div>

            <div class="form-group col-sm-9">
              <%= f.label :商品名 %>
              <%= f.text_field :name, class: "form" %>
            </div>

            <div class="form-group col-sm-9">
              <%= f.label :商品説明 %>
              <%= f.text_area :explanation %>
            </div>

            <div class="form-group col-sm-9">
              <%= f.label :ジャンル %>
              <%= f.collection_select(:genre_id, Genre.where(is_genres_status: true), :id, :name, prompt: "選択してください") %>
            </div>

            <div class="form-group col-sm-9">
              <%= f.label :税抜価格 %>
              ￥<%= f.text_field :price %>
            </div>

            <div class="form-group col-sm-9">
                <th>販売ステータス</th>
                <td>
                	<%= f.radio_button :sales_status, true  %>
                	<%= f.label :sales_status, "販売中" %>
                    <%= f.radio_button :sales_status, false %>
                    <%= f.label :sales_status, "販売停止中" %>
                </td>
            </div>

            <tr>
                <td>
                    <%= f.submit "新規登録",class:"btn btn-success" %>
                    <% end %>
                </td>
            </tr>
        </div>
</div>

